:root {
  --<%= family %>-font-family: "<%= family %>";
}

@font-face {
  font-family: var(--<%= family %>-font-family);
  <%- src %>;
  font-display: swap;
  font-weight: normal;
  font-style: normal;
}

<% if (selector) { %><%= selector %>:where(:before, :after)<% } else { %>
:where(<%= tag %>[class^="<%=prefix%>-"], <%= tag %>[class*=" <%=prefix%>-"]):where(:before, :after)<% } %> {
  font-family: var(--<%= family %>-font-family) !important;
  font-weight: normal !important;
  font-style: normal;
  font-variant: normal;
  text-decoration: none;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  speak: never;
}

<% glyphs.forEach((glyph) => { %>
<% if (selector) { %><%= selector %>.<%= prefix %>-<%= glyph.name %>:before<% } else { %>
<%= tag %>.<%= prefix %>-<%= glyph.name %>:before<% } %> {
  content: "\<%= glyph.unicode[0].codePointAt(0).toString(16) %>";
}
<% }); %>

/* Optional: Size utilities */
.<%= prefix %>-sm { font-size: 0.75em; }
.<%= prefix %>-lg { font-size: 1.25em; }
.<%= prefix %>-xl { font-size: 1.5em; }
.<%= prefix %>-2x { font-size: 2em; }
.<%= prefix %>-3x { font-size: 3em; }

/* Optional: Rotate utilities */
.<%= prefix %>-rotate-90 { transform: rotate(90deg); }
.<%= prefix %>-rotate-180 { transform: rotate(180deg); }
.<%= prefix %>-rotate-270 { transform: rotate(270deg); }

/* Optional: Flip utilities */
.<%= prefix %>-flip-horizontal { transform: scaleX(-1); }
.<%= prefix %>-flip-vertical { transform: scaleY(-1); }
