<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=name%> - Icon Font Demo</title>
    <style>
        :root {
            --bg-primary: #ffffff;
            --bg-secondary: #f8f9fa;
            --bg-tertiary: #f0f0f0;
            --bg-hover: #e9ecef;
            --text-primary: #212529;
            --text-secondary: #6c757d;
            --border-color: #dee2e6;
            --accent-color: #0d6efd;
            --success-color: #198754;
            --header-bg: #343a40;
            --header-text: #f8f9fa;
            --shadow: rgba(0, 0, 0, 0.1);
        }

        [data-theme="dark"] {
            --bg-primary: #1a1a1a;
            --bg-secondary: #2d2d2d;
            --bg-tertiary: #3a3a3a;
            --bg-hover: #404040;
            --text-primary: #e9ecef;
            --text-secondary: #adb5bd;
            --border-color: #495057;
            --accent-color: #0d6efd;
            --success-color: #198754;
            --header-bg: #212529;
            --header-text: #f8f9fa;
            --shadow: rgba(0, 0, 0, 0.3);
        }

        * {
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            color: var(--text-primary);
            background: var(--bg-primary);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            font-size: 16px;
            margin: 0;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .header {
            background: var(--header-bg);
            color: var(--header-text);
            padding: 1rem 1.5rem;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 2px 8px var(--shadow);
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        h1 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
        }

        .controls {
            display: flex;
            gap: 1rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .search-box {
            position: relative;
            min-width: 250px;
        }

        .search-input {
            width: 100%;
            padding: 0.5rem 2.5rem 0.5rem 1rem;
            border: 2px solid var(--border-color);
            border-radius: 8px;
            background: var(--bg-secondary);
            color: var(--text-primary);
            font-size: 0.95rem;
            transition: border-color 0.2s;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--accent-color);
        }

        .search-clear {
            position: absolute;
            right: 0.5rem;
            top: 50%;
            transform: translateY(-50%);
            background: transparent;
            border: none;
            color: var(--text-secondary);
            cursor: pointer;
            padding: 0.25rem;
            display: none;
        }

        .search-clear:hover {
            color: var(--text-primary);
        }

        .view-toggle {
            display: flex;
            gap: 0.5rem;
            background: var(--bg-secondary);
            padding: 0.25rem;
            border-radius: 8px;
        }

        .view-btn {
            padding: 0.5rem 1rem;
            background: transparent;
            border: none;
            border-radius: 6px;
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.2s;
        }

        .view-btn.active {
            background: var(--accent-color);
            color: white;
        }

        .theme-toggle {
            background: var(--bg-secondary);
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 0.5rem 1rem;
            color: var(--text-primary);
            cursor: pointer;
            transition: all 0.2s;
        }

        .theme-toggle:hover {
            background: var(--bg-hover);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
        }

        .stats {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .stat-card {
            flex: 1;
            min-width: 150px;
            background: var(--bg-secondary);
            padding: 1rem 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--border-color);
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
        }

        .stat-value {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--accent-color);
        }

        .icons-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            gap: 1rem;
            margin-bottom: 3rem;
        }

        .icons-list {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .icon-card {
            background: var(--bg-secondary);
            border: 2px solid var(--border-color);
            border-radius: 12px;
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            color: var(--text-primary);
        }

        .icon-card:hover {
            background: var(--bg-hover);
            border-color: var(--accent-color);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px var(--shadow);
        }

        .icon-card.copied {
            border-color: var(--success-color);
            background: var(--success-color);
            color: white;
        }

        .icon-symbol {
            font-size: 2.5rem;
            line-height: 1;
        }

        .icon-name {
            font-size: 0.875rem;
            font-weight: 500;
            text-align: center;
            word-break: break-word;
        }

        .icon-list-item {
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 1.5rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .icon-list-item:hover {
            background: var(--bg-hover);
            border-color: var(--accent-color);
        }

        .icon-list-item.copied {
            border-color: var(--success-color);
            background: var(--success-color);
            color: white;
        }

        .icon-list-symbol {
            font-size: 2rem;
            min-width: 2rem;
            text-align: center;
        }

        .icon-list-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .icon-list-name {
            font-weight: 600;
            font-size: 1rem;
        }

        .icon-list-meta {
            display: flex;
            gap: 1rem;
            font-size: 0.875rem;
            color: var(--text-secondary);
            font-family: 'Courier New', monospace;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-secondary);
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .toast {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            background: var(--success-color);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            box-shadow: 0 4px 12px var(--shadow);
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s;
            z-index: 1000;
        }

        .toast.show {
            transform: translateY(0);
            opacity: 1;
        }

        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                align-items: stretch;
            }

            .controls {
                flex-direction: column;
            }

            .search-box {
                width: 100%;
            }

            .icons-grid {
                grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
                gap: 0.75rem;
            }

            .icon-card {
                padding: 1rem;
            }

            .icon-symbol {
                font-size: 2rem;
            }
        }
    </style>
    <link rel="stylesheet" type="text/css" href="<%=name%>.css<%=hash%>" />
</head>
<body>
    <div class="header">
        <div class="header-content">
            <h1><%=name%></h1>
            <div class="controls">
                <div class="search-box">
                    <input
                        type="text"
                        class="search-input"
                        placeholder="Search icons..."
                        id="searchInput"
                        autocomplete="off"
                    />
                    <button class="search-clear" id="searchClear">‚úï</button>
                </div>
                <div class="view-toggle">
                    <button class="view-btn active" data-view="grid">Grid</button>
                    <button class="view-btn" data-view="list">List</button>
                </div>
                <button class="theme-toggle" id="themeToggle">üåô Dark</button>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="stats">
            <div class="stat-card">
                <div class="stat-label">Total Icons</div>
                <div class="stat-value" id="totalCount"><%=icons.length%></div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Visible Icons</div>
                <div class="stat-value" id="visibleCount"><%=icons.length%></div>
            </div>
        </div>

        <div class="icons-grid" id="iconsContainer">
            <% icons.forEach((icon) => { %>
            <div class="icon-card" data-name="<%=icon.name%>" data-unicode="<%=icon.unicode%>" data-hex="<%=icon.unicode[0].codePointAt(0).toString(16)%>" data-class="<%=prefix%>-<%=icon.name%>">
                <div class="icon-symbol">
                    <<%=tag%> class="<%=prefix%> <%=prefix%>-<%=icon.name%>"></<%=tag%>>
                </div>
                <div class="icon-name"><%=icon.name%></div>
            </div>
            <% }); %>
        </div>

        <div class="empty-state" id="emptyState" style="display: none;">
            <div class="empty-state-icon">üîç</div>
            <h3>No icons found</h3>
            <p>Try a different search term</p>
        </div>
    </div>

    <div class="toast" id="toast">Copied to clipboard!</div>

        <!-- Icon data (server-rendered JSON) -->
    <script type="application/json" id="icon-data">
        <%- JSON.stringify(icons.map(function(icon) {
            return {
                name: icon.name,
                unicode: icon.unicode,
                hex: icon.unicode[0].codePointAt(0).toString(16),
                className: prefix + '-' + icon.name
            };
        })) %>
    </script>

    <script>
        // Parse icon data
        const icons = JSON.parse(document.getElementById('icon-data').textContent);

        // Elements
        const searchInput = document.getElementById('searchInput');
        const searchClear = document.getElementById('searchClear');
        const iconsContainer = document.getElementById('iconsContainer');
        const emptyState = document.getElementById('emptyState');
        const visibleCount = document.getElementById('visibleCount');
        const themeToggle = document.getElementById('themeToggle');
        const viewButtons = document.querySelectorAll('.view-btn');
        const toast = document.getElementById('toast');

        // State
        let currentView = 'grid';
        let currentTheme = localStorage.getItem('theme') || 'light';

        // Initialize
        initTheme();
        initViewToggle();
        initSearch();
        initCopyHandlers();

        // Theme
        function initTheme() {
            document.documentElement.setAttribute('data-theme', currentTheme);
            themeToggle.textContent = currentTheme === 'dark' ? '‚òÄÔ∏è Light' : 'üåô Dark';
        }

        themeToggle.addEventListener('click', () => {
            currentTheme = currentTheme === 'dark' ? 'light' : 'dark';
            localStorage.setItem('theme', currentTheme);
            initTheme();
        });

        // View Toggle
        function initViewToggle() {
            viewButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    viewButtons.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    currentView = btn.dataset.view;
                    renderIcons(icons);
                });
            });
        }

        // Search
        function initSearch() {
            searchInput.addEventListener('input', handleSearch);
            searchClear.addEventListener('click', clearSearch);
        }

        function handleSearch(e) {
            const query = e.target.value.toLowerCase().trim();
            searchClear.style.display = query ? 'block' : 'none';

            if (!query) {
                renderIcons(icons);
                return;
            }

            const filtered = icons.filter(icon =>
                icon.name.toLowerCase().includes(query) ||
                icon.className.toLowerCase().includes(query) ||
                icon.hex.includes(query)
            );

            renderIcons(filtered);
        }

        function clearSearch() {
            searchInput.value = '';
            searchClear.style.display = 'none';
            renderIcons(icons);
        }

        // Render
        function renderIcons(iconsToRender) {
            visibleCount.textContent = iconsToRender.length;

            if (iconsToRender.length === 0) {
                iconsContainer.style.display = 'none';
                emptyState.style.display = 'block';
                return;
            }

            iconsContainer.style.display = currentView === 'grid' ? 'grid' : 'flex';
            iconsContainer.className = currentView === 'grid' ? 'icons-grid' : 'icons-list';
            emptyState.style.display = 'none';

            iconsContainer.innerHTML = iconsToRender.map(icon => {
                if (currentView === 'grid') {
                    return `
                        <div class="icon-card" data-name="${icon.name}" data-unicode="${icon.unicode}" data-hex="${icon.hex}" data-class="${icon.className}">
                            <div class="icon-symbol">
                                <<%=tag%> class="<%=prefix%> ${icon.className}"></<%=tag%>>
                            </div>
                            <div class="icon-name">${icon.name}</div>
                        </div>
                    `;
                } else {
                    return `
                        <div class="icon-list-item" data-name="${icon.name}" data-unicode="${icon.unicode}" data-hex="${icon.hex}" data-class="${icon.className}">
                            <div class="icon-list-symbol">
                                <<%=tag%> class="<%=prefix%> ${icon.className}"></<%=tag%>>
                            </div>
                            <div class="icon-list-info">
                                <div class="icon-list-name">${icon.name}</div>
                                <div class="icon-list-meta">
                                    <span>${icon.className}</span>
                                    <span>\\${icon.hex}</span>
                                    <span>U+${icon.hex.toUpperCase()}</span>
                                </div>
                            </div>
                        </div>
                    `;
                }
            }).join('');

            initCopyHandlers();
        }

        // Copy to Clipboard
        function initCopyHandlers() {
            const cards = iconsContainer.querySelectorAll('.icon-card, .icon-list-item');
            cards.forEach(card => {
                card.addEventListener('click', () => copyIcon(card));
            });
        }

        function copyIcon(card) {
            const className = card.dataset.class;
            const text = `.${className}`;

            navigator.clipboard.writeText(text).then(() => {
                showToast();
                card.classList.add('copied');
                setTimeout(() => card.classList.remove('copied'), 300);
            });
        }

        function showToast() {
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 2000);
        }

        // Keyboard Navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === '/' && document.activeElement !== searchInput) {
                e.preventDefault();
                searchInput.focus();
            }
            if (e.key === 'Escape' && document.activeElement === searchInput) {
                clearSearch();
                searchInput.blur();
            }
        });
    </script>
</body>
</html>
